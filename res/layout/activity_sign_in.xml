<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignInActivity" >
    
    <Button
        android:id="@+id/GoSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/username"
        android:text="Naviguer la page d&apos;inscription" 
        android:onClick="GoToSignUp"/>
    
    <EditText
        android:id="@+id/usernameIn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordIn"
        android:layout_alignLeft="@+id/passwordIn"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Saisir utilisateur" />
    
    <EditText
        android:id="@+id/passwordIn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Saisir mot de passe"
        android:inputType="textPassword" />
    
    <Button
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/password"
        android:layout_marginBottom="100dp"
        android:onClick="SignIn"
        android:text="Se connecter" />


</RelativeLayout>